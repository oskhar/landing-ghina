---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import AnnouncementBanner from "@components/ui/banners/AnnouncementBanner.astro";
import heroImage from "@images/cctv.png";
import faqs from "@data/faqs.json";
import features from "@data/features.json";
import pricing from "@data/pricing.json";
import featureImage from "@images/product-2.png";
import construction from "@images/sec-cctv.jpg";
import tools from "@images/3-cctv.jpg";
import dashboard from "@images/dashboard-image.avif";
import { partnersData } from "@/data_files/constants";

const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout>
  <HeroSection
    title=`Secure Every Step with <span
        class="text-yellow-500 dark:text-yellow-400">Ghina Multiprima</span>`
    subTitle="Professional security systems and infrastructure solutions to protect, connect, and elevate every environment."
    primaryBtn="Start Exploring"
    primaryBtnURL="/products"
    secondaryBtn="Contact Sales Team"
    secondaryBtnURL="/contact"
    withReview={true}
    avatars={avatarSrcs}
    rating=`<span class="font-bold">4.8</span> / 5`
    starCount={4}
    reviews=`From Over <span class="font-bold">12.8k</span> Reviews`
    src={heroImage}
    alt="Stack of Ghina Multiprima product boxes containing assorted hardware tools"
  />

  <ClientsSection
    title="Dipercaya oleh Industri"
    subTitle="Berikut adalah beberapa client kami"
    partners={partnersData}
  />

  <FeaturesGeneral
    title="Meeting Industry Demands"
    subTitle="Di CV Ghina Multiprima, kami menghadirkan solusi atas tantangan unik yang dihadapi dalam dunia keamanan dan teknologi pemantauan. Mulai dari perangkat mutakhir hingga layanan ahli, kami berdedikasi untuk membantu Anda mengatasi hambatan dan mencapai standar keamanan terbaik."
    src={featureImage}
    alt="Ghina Multiprima products in floating boxes"
    features={features}
  />

  <FeaturesNavs
    title=`Sesuaikan Solusi <span class="text-yellow-500 dark:text-yellow-400">CV Ghina Multiprima</span> untuk Memenuhi Kebutuhan Keamanan Anda secara Sempurna.`
    tabs={[
      {
        heading: "Teknologi Terkini",
        content:
          "Tingkatkan keamanan Anda dengan sistem CCTV berteknologi mutakhir dari CV Ghina Multiprima. Kami hadirkan efisiensi tinggi dalam pengawasan melalui solusi otomatisasi yang canggih dan terpercaya.",
        svg: "tools",
        src: tools,
        alt: "Yellow and black heavy equipment on brown grass field",
        first: true,
      },
      {
        heading: "Dashboard yang Intuitif",
        content:
          "Pantau dengan mudah melalui dashboard pemantauan yang ramah pengguna. Kelola instalasi dan sistem keamanan Anda secara efisien dengan antarmuka yang dirancang untuk pengawasan real-time dan manajemen alur kerja yang optimal.",
        svg: "dashboard",
        src: dashboard,
        alt: "A screenshot or graphic representation of the intuitive dashboard",
        second: true,
      },
      {
        heading: "Fitur Unggulan",
        content:
          "Minimalkan kerumitan, maksimalkan proteksi. Fitur-fitur canggih dari CV Ghina Multiprima dirancang untuk menyederhanakan proses keamanan Anda, sekaligus memberikan hasil yang menonjol dalam hal kinerja dan keandalan.",
        svg: "house",
        src: construction,
        alt: "Gray metal building frame near tower crane during daytime",
      },
    ]}
  />

  <TestimonialsSection
    title="Percepat Keamanan Lokasi Anda"
    subTitle="Di CV Ghina Multiprima, kami memastikan proses instalasi CCTV yang cepat dan efisien. Nikmati pengalaman keamanan modern dengan sistem yang langsung aktif dan siap digunakan."
    ;
    testimonials={[
      {
        content:
          "CV Ghina Multiprima sangat meningkatkan efisiensi sistem pengawasan kami. Proses pemasangan cepat, dan respon teknisinya luar biasa. Benar-benar solusi terbaik dalam sistem keamanan.",
        author: "Amanda Lestari",
        role: "Operational Manager | PT Prima Sentosa",
        avatarSrc:
          "https://images.unsplash.com/photo-1593104547489-5cfb3839a3b5?q=80&w=1453&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D8&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80",
      },
    ]}
    statistics={[
      {
        count: "1.500+",
        description:
          "proyek berhasil diselesaikan â€” dari rumah tinggal hingga kawasan industri besar",
      },
      {
        count: "45%",
        description:
          "eningkatan efektivitas pengawasan setelah pemasangan sistem dari CV Ghina",
      },
      {
        count: "15.3%",
        description:
          "pengurangan biaya kehilangan aset berdasarkan laporan klien jangka panjang",
      },
      {
        count: "2x",
        description: "lebih cepat dalam proses instalasi dibandingkan metode konvensional",
      },
    ]}
  />

  <PricingSection pricing={pricing} />

  <FAQ title="Frequently<br />asked questions" faqs={faqs} />

  <HeroSectionAlt
    title="Let's Build Together"
    subTitle = "CV Ghina Multiprima adalah mitra terpercaya dalam instalasi CCTV dan sistem keamanan, dengan dukungan teknologi modern dan tenaga ahli profesional di seluruh Indonesia."
    url="#"
  />
</MainLayout>
